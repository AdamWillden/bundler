{
  "name": "aurelia-bundler",
  "version": "0.4.0",
  "description": "A library for bundling JavaScript, HTML and CSS for use with SystemJS.",
  "keywords": [
    "aurelia",
    "systemjs",
    "bundling",
    "HTML",
    "JavaScript",
    "CSS"
  ],
  "homepage": "http://aurelia.io",
  "bugs": {
    "url": "https://github.com/aurelia/bundler/issues"
  },
  "license": "MIT",
  "author": "Rob Eisenberg <rob@bluespire.com> (http://robeisenberg.com/)",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "http://github.com/aurelia/bundler"
  },
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "pretest": "rimraf tb/** && tsc --project tsconfig.json --outDir tb  --module commonjs",
    "test": "mocha tb/test",
    "prebuild:compile": "rimraf 'dist/**'",
    "build:compile": "tsc --project tsconfig.json --outDir dist --module commonjs",
    "build": "npm run build:compile"
  },
  "dependencies": {
    "bluebird": "^2.9.25",
    "cheerio": "^0.22.0",
    "clean-css": "^3.4.9",
    "glob": "^5.0.9",
    "globby": "^2.0.0",
    "html-minifier": "^1.1.1",
    "lodash": "^3.10.1",
    "rev-hash": "^1.0.0",
    "rev-path": "^1.0.0",
    "systemjs-builder": "^0.15.33"
  },
  "devDependencies": {
    "@types/bluebird": "^3.0.35",
    "@types/cheerio": "^0.17.31",
    "@types/clean-css": "^3.4.30",
    "@types/expect": "^1.13.30",
    "@types/glob": "^5.0.30",
    "@types/html-minifier": "^1.1.30",
    "@types/lodash": "^4.14.38",
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.51",
    "@types/sinon": "^1.16.31",
    "cross-env": "^3.1.3",
    "eslint": "^3.8.1",
    "expect": "^1.19.0",
    "mocha": "^2.4.5",
    "rimraf": "^2.5.4",
    "sinon": "^1.17.6",
    "ts-node": "^1.7.2",
    "tslint": "^3.15.1",
    "typescript": "^2.0.7"
  }
}
